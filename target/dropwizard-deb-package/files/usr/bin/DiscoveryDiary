#!/bin/bash -e

[ -r "/etc/default/DiscoveryDiary" ] && . "/etc/default/DiscoveryDiary"

JAVA_OPTS=$(sed -e '/^[[:space:]]*\/\//d' -e 's|[[:space:]]*//.*| |' -e 's|^| |' /etc/DiscoveryDiary.jvm.conf | tr -d "\n")
JAVA_CMD="java ${JAVA_OPTS} -jar /usr/share/java/DiscoveryDiary.jar server /etc/DiscoveryDiary.yml"

logger -is "[`date -u +%Y-%m-%dT%T.%3NZ`] Starting DiscoveryDiary"
exec ${JAVA_CMD} 2>&1 | tee -a /var/log/DiscoveryDiary/init.log
