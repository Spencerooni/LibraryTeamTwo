#!/bin/sh

# SystemD
if which systemctl >/dev/null; then
    echo "Removing SystemD service: DiscoveryDiary"
    systemctl stop "DiscoveryDiary"
    systemctl disable "DiscoveryDiary"
    systemctl daemon-reload
    exit 0
fi

# Upstart
if which initctl >/dev/null; then
    echo "Removing Upstart service: DiscoveryDiary"
    initctl stop "DiscoveryDiary"
    initctl reload-configuration
    exit 0
fi

# SystemV
if which invoke-rc.d >/dev/null; then
    echo "Removing SystemV service: DiscoveryDiary"
    invoke-rc.d "DiscoveryDiary" stop
    update-rc.d "DiscoveryDiary" remove
    exit 0
fi

echo "Unable to find supported init system."
exit 1
