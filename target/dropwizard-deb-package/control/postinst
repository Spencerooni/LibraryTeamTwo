#!/bin/sh

# SystemD
if which systemctl >/dev/null; then
    echo "Registering SystemD service: DiscoveryDiary"
    systemctl daemon-reload
    systemctl enable "DiscoveryDiary"
    systemctl start "DiscoveryDiary"
    exit 0
fi

# Upstart
if which initctl >/dev/null; then
    echo "Registering Upstart service: DiscoveryDiary"
    initctl reload-configuration
    initctl start "DiscoveryDiary"
    exit 0
fi

# SystemV
if which invoke-rc.d >/dev/null; then
    echo "Registering SystemV service: DiscoveryDiary"
    update-rc.d "DiscoveryDiary" defaults
    invoke-rc.d "DiscoveryDiary" start
    exit 0
fi

echo "Unable to find supported init system."
exit 1
