#!/bin/sh -e

case "$1" in
    install|upgrade)
        if ! getent passwd "dropwizard" >/dev/null; then
            adduser --system --group "dropwizard" > /dev/null
        fi

        mkdir -p "/var/log/DiscoveryDiary" && chown -R "dropwizard:dropwizard" "/var/log/DiscoveryDiary"
    ;;

esac

exit 0
